# ------- Global settings -------
env_prefix = "{{ name_prefix }}"
  
# ------- Cloud Settings -------
azure_region = "{{ infra_region }}"

# ------- CDP Environment Deployment -------
deployment_template = "{{ deployment_template }}"

{% if datalake_scale is defined %}
datalake_scale = "{{ datalake_scale }}"
{% endif %}

# ------- Resource Tagging -------
env_tags = {{ tags | to_json }}

# ------- Network Settings -------
ingress_extra_cidrs_and_ports = {
 cidrs = {{ ingress_extra_cidrs_and_ports['cidrs'] | to_json }},
 ports = {{ ingress_extra_cidrs_and_ports['ports'] }}
}